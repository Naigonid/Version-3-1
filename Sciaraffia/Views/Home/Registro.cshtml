@{
    ViewData["Title"]="Registro";
}
@model Usser


    <form asp-action="SetUsuario" asp-controller="home" method="POST" id="Registrar">
    <div class="form-group col-md-6">
        <label >Nombre</label>
        <input type="Text" asp-for="nombre" class="form-control">
        <span asp-validation-for="nombre" class="badge text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label >Correo</label>
        <input type="Email"asp-for="correo" class="form-control">
        <span asp-validation-for="correo" class="badge text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label >Clave</label>
        <input  type="Password" asp-for="clave" class="form-control">
        <span asp-validation-for="clave" class="badge text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label >Confirmar Clave</label>
        <input  type="Password" asp-for="conclave" class="form-control">
        <span asp-validation-for="conclave" class="badge text-danger"></span>
    </div>

<div class="row">
<button type="submit" class="btn btn-primary">Guardar</button>
</div>
</form>
